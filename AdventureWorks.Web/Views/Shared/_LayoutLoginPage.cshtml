@using AdventureWorks.Resources
@using AdventureWorks.Web.Helpers.Settings
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <title>@AppSettings.AppName | @Labels.Login</title>

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css/fonts/font-awesome/css/css")
    @Styles.Render("~/Content/adminLte")
    @Styles.Render("~/Content/app")
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>@AppSettings.AppName</b>
        </div>

        <div class="login-box-body">
            @RenderBody()
        </div><!-- .login-box-body -->
    </div><!-- .login-box -->

    @Scripts.Render("~/bundles/jQuery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/adminLte")
    @Scripts.Render("~/bundles/appLib")
    @RenderSection("scripts", required: false)
</body>
</html>
