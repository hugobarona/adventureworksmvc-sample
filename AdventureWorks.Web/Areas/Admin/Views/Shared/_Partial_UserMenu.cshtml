@using AdventureWorks.Resources
@using AdventureWorks.Web.Helpers.User
@if (User.Identity.IsAuthenticated)
{
    <!-- User Account Menu -->
    <li class="dropdown user user-menu">
        <!-- Menu Toggle Button -->
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-user"></i>
            <span>@UserProfileHelper.GetUserName() <i class="caret"></i></span>
        </a>
        <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
                <img src="@Url.Content(UserProfileHelper.GetProfileImage())" class="img-circle" alt="User Image"/>
                <p>
                    @ViewData["userName"]
                    <small>Email:<br/>@UserProfileHelper.GetUserEmail()</small>
                    <small>Korisničke uloge:<br/>@UserRoleHelper.GetRolesTxt()</small>
                </p>
            </li>
            <!-- Menu Body -->
            @*<li class="user-body">
            <div class="row">
